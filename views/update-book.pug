extends layout 
block content 
    h2 Update Book
    if errors 
        h2.error Oops! Looks Like An Error Occurred! 
        ul.error 
            each error in errors 
                li #{ error.message }
    form(action=`/books/${book.id}` method="POST")
        p 
            label(for="title") Title 
            input(name="title" type="text" id="title" value=`${book.title}`)
        p 
            label(for="author") Author 
            input(name="author" type="text" id="author" value=`${book.author}`)
        p 
            label(for="genre") Genre 
            input(name="genre" type="text" id="genre" value=`${book.genre}`)
        p 
            label(for="year") Year 
            input(name="year" type="text" id="year" value=`${book.year}`)  
        p 
            input.update-button(type="submit" value="Update Book")
        p 
            input.delete-button(type="submit" data-book-id=`${book.id}` value="Delete Book")    
        p
            a.button.cancel-button(href="/") Cancel           
    script(src="/static/js/script.js")